<!DOCTYPE html>
<html>

<head>
    <title>

    </title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <script src="/sweetalert2/sweetalert2.all.min.js"></script>
</head>

<%- include("plantillas/header_principal.ejs") %>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="row justify-content-center bg-primary rounded" style="width: 400px;">

            <form action="/autenticacion/login" method="POST">


                <div class="col ">
                    <label for="usuario" class="my-2 fw-bold fs-5 text-light">Usuario</label>
                    <input type="text" class="form-control" placeholder="Correo" name="correo" required>
                </div>

                <div class="col">
                    <label for="contraseña" class="my-2 fw-bold fs-5 text-light">Contraseña</label>
                    <input type="password" name="contraseña" id="contraseña" class="form-control"
                        aria-describedby="passwordHelpInline">
                </div>


                <div class="row p-0 mt-4 mb-2">
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button type="submit" class="btn btn-light">Iniciar Sesión</button>
                    </div>
                </div>


            </form>

            <div class="row p-0 mt-0 mb-2">
                <a href="/autenticacion/registrarPaciente" class="d-grid gap-2 col-6 mx-auto link-offset-2 link-underline link-underline-opacity-0"><button
                        class="btn btn-dark">Crear cuenta</button></a>

            </div>

        </div>
    </div>



    <% if (typeof mensaje !=='undefined' ) { %>
        <script>
            Swal.fire({
                icon: '<%= mensaje.tipo %>',
                title: '<%= mensaje.titulo %>',
                text: '<%= mensaje.texto %>',
                timer: '<%= mensaje.tiempo %>',
                showConfirmButton: false
            }).then(() => {
                window.location = '/<%= mensaje.ruta %>';
            });
        </script>
        <% } %>


            <script src="/javascripts/bootstrap.bundle.min.js"></script>