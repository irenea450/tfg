<!DOCTYPE html>
<html lang="en">

<head>
    <title>Informes <%= title %>
    </title>
    <link rel="icon" href="/images/favicon.png" type="image/x-icon"><!-- Favicon -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/font/bootstrap-icons.css"> <!-- Iconos -->
    <link rel="stylesheet" href="/stylesheets/estilos_pacientes.css"><!-- estilos comunes en ejs de pacientes -->
    <script src="/sweetalert2/sweetalert2.all.min.js"></script> <!-- alertas -->

</head>

<body>
    <%- include("../plantillas/header_pacientes.ejs") %>

    <main class="container my-4">

        <h2 class="titulo bg-primary text-white p-2 rounded"><i class="bi bi-file-text"></i> Informes Dentales</h2>

        <div class="container bg-primary p-1 m-0 rounded" id="contenedorInformes" style="min-height: 75vh;">
            <div class="accordion accordion-flush m-2" id="accordionInformes">
                <% informes.forEach((informe, index) => { 
                    const fecha = new Date(informe.fecha).toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    });
                %>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed fw-bold" type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#flush-collapse<%= index %>" 
                            aria-expanded="false" 
                            aria-controls="flush-collapse<%= index %>">
                            Informe del <%= fecha %> - <%= informe.motivo || 'Sin tÃ­tulo' %>
                        </button>
                    </h2>
                    <div id="flush-collapse<%= index %>" class="accordion-collapse collapse" 
                        data-bs-parent="#accordionInformes">
                        <div class="accordion-body">
                            <p><strong>Atendido por:</strong> <%= informe.nombre_trabajador || 'No especificado' %></p>
                            <p><strong>Informe:</strong></p>
                            <p class="border border-primary-subtle p-1" style="min-height: 100px;"><%= informe.descripcion || 'No hay contenido disponible' %></p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
        

    </div>
    </main>

        <!-- Footer -->
        <%- include("../plantillas/footer.ejs") %>


        <script src="/javascripts/bootstrap.bundle.min.js"></script>


</body>

</html>
